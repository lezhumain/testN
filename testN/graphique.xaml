        xmlns:local="clr-namespace:testN"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
        Title="graphique" Height="300" Width="300">
